@model EntityLayer.Concrete.Applicant
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kullanıcı Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {


                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız  </label>
                            @Html.TextBoxFor(x=>x.ApplicantName, new{@class ="form-control" ,required ="required" })
                            @Html.ValidationMessageFor(x=>x.ApplicantName, "", new{@class = "text-danger"} )
                         </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01"> Soyadınız </label>
                            @Html.TextBoxFor(x=>x.ApplicantSurname, new{@class ="form-control"  ,required ="required"})
                            @Html.ValidationMessageFor(x=>x.ApplicantSurname, "", new{@class = "text-danger"})
                         </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresi</label>
                            @Html.TextBoxFor(x=>x.ApplicantMail, new{@class ="form-control",required ="required"})
                            @Html.ValidationMessageFor(x=>x.ApplicantMail, "", new{@class = "text-danger"})
                         </div>

                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Yaşınız</label>
                            @Html.TextBoxFor(x=>x.ApplicantAge, new{@class ="form-control",required ="required"})
                            @Html.ValidationMessageFor(x=>x.ApplicantAge, "", new{@class = "text-danger"})
                         </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Cinsiyetiniz</label>
                            @Html.DropDownListFor(x => x.ApplicantGender, new List<SelectListItem>
                        {
                        new SelectListItem { Text = "Erkek", Value = "Erkek" },
                        new SelectListItem { Text = "Kadın", Value = "Kadın" },
                        new SelectListItem { Text = "Diğer", Value = "Diğer" }
                        }, "Seçiniz", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.ApplicantGender, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Okuduğunuz Üniversite</label>
                            @Html.TextBoxFor(x=>x.ApplicantUniversity, new{@class ="form-control"})
                            @Html.ValidationMessageFor(x=>x.ApplicantUniversity, "", new{@class = "text-danger",required ="required"})
                         </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Okuduğunu Bölüm</label>
                            @Html.TextBoxFor(x=>x.ApplicantUniversityDepartment, new{@class ="form-control",required ="required"})
                            @Html.ValidationMessageFor(x=>x.ApplicantUniversityDepartment, "", new{@class = "text-danger"})
                         </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mezuniyet Durumunuz</label>
                            @Html.TextBoxFor(x=>x.ApplicantGradition, new{@class ="form-control",required ="required"})
                            @Html.ValidationMessageFor(x=>x.ApplicantGradition, "", new{@class = "text-danger"})
                         </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Yabancı Dil Bilginiz</label>
                            @Html.TextBoxFor(x=>x.LanguageProficiency, new{@class ="form-control"})
                            @Html.ValidationMessageFor(x=>x.LanguageProficiency, "", new{@class = "text-danger"})
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword1 mb-2">Şifre</label>
                                @Html.TextBoxFor(x=>x.ApplicantPassword, new{@class ="form-control",required ="required"})
                                @Html.ValidationMessageFor(x=>x.ApplicantPassword, "", new{@class = "text-danger"})
                            </div>
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                                @Html.TextBoxFor(x=>x.ApplicantImage, new{@class ="form-control"})
                                @Html.ValidationMessageFor(x=>x.ApplicantImage, "", new{@class = "text-danger"})
                             </div>

                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                        <p>
                            <a href="#" id="btn1">Kullanıcı Sözleşmesini Okudum Kabul Ediyorum</a>
                            <br />


                        </p>

                    </div>
                }
            </div>
        </div>
    </div>
    <script>
        $('#btn1').click(function () {
            swal("Kullanım Şartları","Sitemize verdiğiniz mail adresi üzerinden bilgi ve haber e - postaları spam ölçüsüne varmadan gönderilmeye devam edilecektir.Eğer e - posta bülteninden çokmak isterseniz mail ileti dizisini durdurabilrsiniz, şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullancının görmeyeceği şekilde veri tabanımızda saklanmaktadır.");
                                });
    </script>
</section>