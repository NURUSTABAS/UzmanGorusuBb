@model UzmanGorusuB.Models.AddProfileImage
@{
    ViewData["Title"] = "ApplicantAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kullanıcı Profil Bilgileri Düzenleme </h4>
                <br />
                @Html.HiddenFor(x=>x.ApplicantID, new{@class="from-control"})
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">İsim</label>
                        @Html.TextBoxFor(x=>x.ApplicantName, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputSurName1">Soyisim</label>
                        @Html.TextBoxFor(x=>x.ApplicantSurname, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputAge">Yaş</label>
                        @Html.TextBoxFor(x=>x.ApplicantAge, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.ApplicantMail, new{@class = "form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.TextBoxFor(x=>x.ApplicantPassword, new{@class = "form-control"})
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="validationCustom02">Cinsiyetiniz</label>
                        @Html.DropDownListFor(x => x.ApplicantGender, new List<SelectListItem>
                        {
                        new SelectListItem { Text = "Erkek", Value = "Erkek" },
                        new SelectListItem { Text = "Kadın", Value = "Kadın" },
                        new SelectListItem { Text = "Diğer", Value = "Diğer" }
                        }, "Seçiniz", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(x => x.ApplicantGender, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Üniversite</label>
                        @Html.TextBoxFor(x=>x.ApplicantUniversity, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Fakülte</label>
                        @Html.TextBoxFor(x=>x.ApplicantUniversityDepartment, new{@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Dil Seviyesi</label>
                        @Html.TextBoxFor(x=>x.LanguageProficiency, new{@class = "form-control"})
                    </div>
                     <div class="form-group">
                        <label>Resminiz</label>
                    <input type="file" name="ApplicantImage" />

                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.ApplicantAbout, 10,3, new{@class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>


</form>

