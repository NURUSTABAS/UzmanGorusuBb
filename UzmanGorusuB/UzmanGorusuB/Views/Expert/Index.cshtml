@using EntityLayer.Concrete
@model List<Expert>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Uzmanlarımız</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="single.html">
                                <img src="@item.ExpertImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@(((DateTime)item.MembershipDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-pencil-alt fa-xs"></i>@item.ExpertTitle
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Expert/ExpertDetails/@item.ExpertID">@item.ExpertName @item.ExpertSurname</a>
                                </h5>
                                <p class="card-text mb-3">@item.ExpertDescription/* .Substring(0,item.ExpertDescription.Substring(0,130).LastIndexOf(" ")) */
                                    ...</p>
                                <a href="/Expert/ExpertDetails/@item.ExpertID" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                        <br/>
                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
